<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Arbeit mit Dateien", "Option", "Option", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Neue Datei", "NameOfNewFile", "SavePersonsIntoNewFile")</li>
                    <li>@Html.ActionLink("Datei eröffnen", "GetFileName", "DisplayPersonsFromFile")</li>
                    <li>@Html.ActionLink("Neue Personen beifügen", "GetFileName", "SavePersonsIntoExistingFile")</li>
                    <li>@Html.ActionLink("Eine Person löschen", "GetFileName", "DeletePersonFromExistingFile")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">

        <h3> @if (TempData.ContainsKey("FileName"))
        { @TempData["FileName"]} </h3>

        <h3> @if (TempData.ContainsKey("AddPerson")) 
            { @TempData["AddPerson"]}</h3>

        <h3> @if (TempData.ContainsKey("SavePersons"))
             {@TempData["SavePersons"]}

        </h3>
        <h3>
            @if (TempData.ContainsKey("DeletePerson"))
            {@TempData["DeletePerson"]}

        </h3>

        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
